<h1>閲覧</h1>

<p id="notice"><%= notice %></p>

<p>
  <strong>物件名:</strong>
  <%= @property.name %>
</p>

<p>
  <strong>賃料:</strong>
  <%= @property.price %>
</p>

<p>
  <strong>住所:</strong>
  <%= @property.address %>
</p>

<p>
  <strong>築年数:</strong>
  <%= @property.age %>
</p>

<p>
  <strong>備考:</strong>
  <%= @property.note %>
</p>
<tr><td><hr width="1000" align="left"></td></tr>
<% n = 0 %>
<% @stations.each do |station| %>
    <h2>
      最寄り駅<%= n += 1 %>
    </h2>

    <p>
    <strong>路線名</strong>
    <%= station.route %>
    </p>

    <p>
      <strong>駅名</strong>
      <%= station.station %>
    </p>

    <p>
      <strong>徒歩分数</strong>
      <%= station.time %>
    </p>
<% end %>

<%= link_to '編集', edit_property_path(@property) %>
<%= link_to '戻る', properties_path %>
